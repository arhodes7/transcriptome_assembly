manifest {
    mainScript = 'main.nf'
}
 
includeConfig "$baseDir/params.config"

process {
  queue = 'short-sl7,biocore-el7'
  memory='12G'
  container = 'biocorecrg/trinity_assembly:0.4'
  withLabel: big_mem_cpus {
        cpus = 8
        memory = '30G'
  }	
  withLabel: temp {
       container = 'biocorecrg/trinity_assembly:0.5'
  }
}

singularity.enabled = true
